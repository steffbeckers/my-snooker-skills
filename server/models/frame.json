{
  "name": "Frame",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "createdAt": "createdOn",
      "updatedAt": "updatedOn",
      "validateUpsert": true,
      "required": false
    },
    "SoftDelete": {
      "deletedAt": "deletedOn"
    },
    "FireLoop": true
  },
  "properties": {
    "number": {
      "type": "number"
    },
    "startDateTime": {
      "type": "date"
    },
    "endDateTime": {
      "type": "date"
    },
    "reds": {
      "type": "number"
    },
    "scores": {
      "type": "object"
    },
    "handicaps": {
      "type": "object"
    },
    "scoreboard": {
      "type": "object"
    },
    "statistics": {
      "type": "object"
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "ownerId"
    },
    "createdByUser": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "createdBy"
    },
    "updatedByUser": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "updatedBy"
    },
    "match": {
      "type": "belongsTo",
      "model": "Match"
    },
    "players": {
      "type": "hasAndBelongsToMany",
      "model": "user"
    },
    "breakOffBy": {
      "type": "belongsTo",
      "model": "user"
    },
    "tossWonBy": {
      "type": "belongsTo",
      "model": "user"
    },
    "turnOf": {
      "type": "belongsTo",
      "model": "user"
    },
    "winner": {
      "type": "belongsTo",
      "model": "user"
    },
    "breaks": {
      "type": "hasMany",
      "model": "Break"
    },
    "referee": {
      "type": "belongsTo",
      "model": "user"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "framePlayer",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "frameReferee",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__link__players"
    }
  ],
  "methods": {}
}

{
  "name": "Match",
  "plural": "Matches",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "createdAt": "createdOn",
      "updatedAt": "updatedOn",
      "validateUpsert": true,
      "required": false
    },
    "SoftDelete": {
      "deletedAt": "deletedOn"
    }
  },
  "properties": {
    "startDateTime": {
      "type": "date"
    },
    "endDateTime": {
      "type": "date"
    },
    "bestOf": {
      "type": "number"
    },
    "reds": {
      "type": "number"
    },
    "scores": {
      "type": "object"
    },
    "handicaps": {
      "type": "object"
    },
    "scoreboardType": {
      "type": "string"
    },
    "statistics": {
      "type": "object"
    }
  },
  "validations": [],
  "relations": {
    "userModel": {
      "type": "belongsTo",
      "model": "UserModel",
      "foreignKey": "ownerId"
    },
    "createdByUser": {
      "type": "belongsTo",
      "model": "UserModel",
      "foreignKey": "createdBy"
    },
    "updatedByUser": {
      "type": "belongsTo",
      "model": "UserModel",
      "foreignKey": "updatedBy"
    },
    "tournament": {
      "type": "belongsTo",
      "model": "Tournament"
    },
    "frames": {
      "type": "hasMany",
      "model": "Frame"
    },
    "players": {
      "type": "hasAndBelongsToMany",
      "model": "UserModel"
    },
    "teams": {
      "type": "hasAndBelongsToMany",
      "model": "Team"
    },
    "winner": {
      "type": "belongsTo",
      "model": "UserModel"
    },
    "referee": {
      "type": "belongsTo",
      "model": "UserModel"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "matchPlayer",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "matchReferee",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__link__players"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__create__frames"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "statistics"
    }
  ],
  "methods": {}
}

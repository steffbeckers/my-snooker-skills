{
  "name": "Tournament",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "createdAt": "createdOn",
      "updatedAt": "updatedOn",
      "validateUpsert": true,
      "required": false
    },
    "SoftDelete": {
      "deletedAt": "deletedOn"
    }
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "startDateTime": {
      "type": "date"
    },
    "endDateTime": {
      "type": "date"
    },
    "settings": {
      "type": "object"
    },
    "handicaps": {
      "type": "object"
    }
  },
  "validations": [],
  "relations": {
    "players": {
      "type": "hasAndBelongsToMany",
      "model": "user"
    },
    "teams": {
      "type": "hasAndBelongsToMany",
      "model": "Team"
    },
    "league": {
      "type": "belongsTo",
      "model": "League"
    },
    "frames": {
      "type": "hasMany",
      "model": "Frame"
    },
    "winner": {
      "type": "belongsTo",
      "model": "user"
    },
    "runnerUp": {
      "type": "belongsTo",
      "model": "user"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "Administrator",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    }
  ],
  "methods": {}
}

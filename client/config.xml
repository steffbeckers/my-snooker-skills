<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="2" id="com.mysnookerskills.app" ios-CFBundleVersion="2" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Snooker</name>
  <description>Track your snooker skills, compare with friends and use a real-time scoreboard.</description>
  <author email="steff@steffbeckers.eu" href="https://steffbeckers.eu">Steff Beckers</author>
  <content src="index.html" />
  <preference name="DisallowOverscroll" value="true" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  <plugin name="cordova-plugin-headercolor" spec="^1.0.0" />
  <preference name="HeaderColor" value="#007bff" />
  <plugin name="cordova-plugin-qrscanner" spec="^2.6.0" />
  <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
  <plugin name="cordova-plugin-camera" spec="^4.0.3" />
  <engine name="android" spec="^7.0.0" />
</widget>
